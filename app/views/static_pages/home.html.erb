<div class="container" align="center">
	<img src="/assets/logo.png" class="logo">
	<span class="phone">
		888-400-9132 - Call Now for Approval
	</span>
</div>
<div class="bgimg">
	<div class="container" align="center" style="height:700px;">
		<div class="front-text">
			<span class="emptext">Instant</span> Business Cash
			<hr>
			<div class="front-sub-text">
				Fast Approval on<br>
				Business Loans up to<br>
				$50,000 in Days!
			</div>
			<div class="front-list-1">
				Low Monthly Payments
				<br>
				Apply in Minutes
				<br>
				Okay if Denied by Bank
				<br>
				As Fast as 24 hours!
			</div>
		</div>
		<div class="form-box">
			<div class="form-box-heading-1">
				24 HOUR APPROVAL - ALT RATES - FUNDING IN DAYS!
			</div>
			<%= form_for User.new, remote: true, :html => {:id => "form1"} do |f| %>
			<div class="firstname">
				<%= label_tag :firstname, "First Name" %>
				<%= text_field_tag :first_name, nil, :class => "xverify_firstname", :placeholder => "First Name" %>
			</div>
			<div class="lastname">
				<%= label_tag :lastname, "Last Name" %>
				<%= text_field_tag :last_name, nil, :class => "xverify_lastname", :placeholder => "Last Name" %>
			</div>
			<div class="email">
				<%= f.label :email %>
				<%= f.text_field :email, :class => "xverify_email", :placeholder => "bob@yahoo.com" %>
			</div>
			<div class="phone">
				<%= f.label :phone %>
				<%= f.text_field :phone, :class => "xverify_phone", :placeholder => "215-444-3344" %>
			</div>
			<%= f.submit "Get Started", :class => "submit", :id => "submit1" %>
			<div class="message" id="name_error">
			</div>
			<div class="message" id="email_error">
			</div>
			<div class="message" id="phone_error">
			</div>
			<% end %>
		</div>
	</div>
</div>
